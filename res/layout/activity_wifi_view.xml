<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hey.rich.edmontonwifi.WifiViewActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/wifi_view_wifi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Title" />

    <TextView
        android:id="@+id/wifi_view_wifi_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wifi_view_wifi_title"
        android:layout_below="@+id/wifi_view_wifi_title"
        android:text="Address" />

    <TextView
        android:id="@+id/wifi_view_wifi_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wifi_view_wifi_address"
        android:layout_below="@+id/wifi_view_wifi_address"
        android:text="Status" />

    <TextView
        android:id="@+id/wifi_view_wifi_facility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wifi_view_wifi_status"
        android:layout_below="@+id/wifi_view_wifi_status"
        android:text="Facility" />

    <TextView
        android:id="@+id/wifi_view_wifi_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wifi_view_wifi_facility"
        android:layout_below="@+id/wifi_view_wifi_facility"
        android:text="Provider" />

    <TextView
        android:id="@+id/wifi_view_wifi_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wifi_view_wifi_provider"
        android:layout_below="@+id/wifi_view_wifi_provider"
        android:text="Distance" />

    <Button
        android:id="@+id/wifi_view_wifi_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Open in Maps" />

    <Button
        android:id="@+id/wifi_view_wifi_clipboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_view_wifi_maps"
        android:layout_centerHorizontal="true"
        android:text="Copy" />

    <Button
        android:id="@+id/wifi_view_wifi_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_view_wifi_clipboard"
        android:layout_centerHorizontal="true"
        android:text="Remove" />

</RelativeLayout>
